<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_alpha_03">


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_25"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="90dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_50"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="180dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_75"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="270dp"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_15"
        app:layout_constraintRight_toRightOf="@+id/vertical_85"
        android:background="@drawable/bg_corner"/>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="确定"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_cancel"
        app:layout_constraintTop_toTopOf="@+id/horizontal_75"
        app:layout_constraintVertical_bias="0.538"
        app:layout_constraintRight_toLeftOf="@+id/vertical_85"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="取消"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_commit"
        app:layout_constraintTop_toTopOf="@+id/horizontal_75"
        app:layout_constraintVertical_bias="0.538"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_15" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_75"
        app:layout_constraintRight_toLeftOf="@+id/btn_8"
        app:layout_constraintTop_toTopOf="@+id/horizontal_50"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_15" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_75"
        app:layout_constraintLeft_toRightOf="@+id/btn_7"
        app:layout_constraintRight_toLeftOf="@+id/btn_9"
        app:layout_constraintTop_toTopOf="@+id/horizontal_50" />

    <Button
        android:id="@+id/btn_point"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="●"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_75"
        app:layout_constraintLeft_toRightOf="@+id/btn_0"
        app:layout_constraintRight_toLeftOf="@+id/btn_delete"
        app:layout_constraintTop_toTopOf="@+id/horizontal_50" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_75"
        app:layout_constraintLeft_toRightOf="@+id/btn_9"
        app:layout_constraintRight_toLeftOf="@+id/btn_point"
        app:layout_constraintTop_toTopOf="@+id/horizontal_50" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_75"
        app:layout_constraintLeft_toRightOf="@+id/btn_8"
        app:layout_constraintRight_toLeftOf="@+id/btn_0"
        app:layout_constraintTop_toTopOf="@+id/horizontal_50" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="←"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_75"
        app:layout_constraintLeft_toRightOf="@+id/btn_point"
        app:layout_constraintTop_toTopOf="@+id/horizontal_50"
        app:layout_constraintRight_toLeftOf="@+id/vertical_85"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_50"
        app:layout_constraintRight_toLeftOf="@+id/btn_2"
        app:layout_constraintTop_toTopOf="@+id/horizontal_25"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_15" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_50"
        app:layout_constraintLeft_toRightOf="@+id/btn_1"
        app:layout_constraintRight_toLeftOf="@+id/btn_3"
        app:layout_constraintTop_toTopOf="@+id/horizontal_25" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_50"
        app:layout_constraintLeft_toRightOf="@+id/btn_2"
        app:layout_constraintRight_toLeftOf="@+id/btn_4"
        app:layout_constraintTop_toTopOf="@+id/horizontal_25" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_50"
        app:layout_constraintLeft_toRightOf="@+id/btn_3"
        app:layout_constraintRight_toLeftOf="@+id/btn_5"
        app:layout_constraintTop_toTopOf="@+id/horizontal_25" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_50"
        app:layout_constraintLeft_toRightOf="@+id/btn_4"
        app:layout_constraintRight_toLeftOf="@+id/btn_6"
        app:layout_constraintTop_toTopOf="@+id/horizontal_25" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_50"
        app:layout_constraintLeft_toRightOf="@+id/btn_5"
        app:layout_constraintTop_toTopOf="@+id/horizontal_25"
        app:layout_constraintRight_toLeftOf="@+id/vertical_85"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btn_left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="◀"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_25"
        app:layout_constraintRight_toLeftOf="@+id/input_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_15" />

    <TextView
        android:id="@+id/input_text"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/btn_right"
        app:layout_constraintLeft_toRightOf="@+id/btn_left"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_25" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="▶"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_25"
        app:layout_constraintLeft_toRightOf="@+id/input_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vertical_85"
        android:layout_marginRight="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_15"
        app:layout_constraintGuide_percent="0.15"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_85"
        app:layout_constraintGuide_percent="0.85"
        android:orientation="vertical" />


</android.support.constraint.ConstraintLayout>